{
  "swagger": "2.0",
  "info": {
    "title": "Twitter Lite API V1",
    "version": "v1"
  },
  "basePath": "/api/v1",
  "paths": {
    "/users": {
      "post": {
        "summary": "Sign Up a user",
        "tags": [
          "Userss"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "username",
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "user created"
          }
        }
      }
    }
  }
}